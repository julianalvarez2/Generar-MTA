<body>
  <div class="container">
    <h2>Calculadora de MTA</h2>
    <label for="inputMacMTA">Ingresa una dirección MAC:</label>
    <input type="text" id="inputMacMTA" placeholder="Ej. aa:bb:cc:dd:ee:ff">

    <label for="outputMTA">MTA calculada:</label>
    <input type="text" id="outputMTA" readonly>

    <div class="buttons">
      <button onclick="calcularYMostrarMTA()">Calcular</button>
      <button onclick="limpiarMTA()">Limpiar</button>
    </div>
  </div>

  <script>
    function macToSvFormat(mac) {
      mac = mac.toLowerCase().replace(/[:\-\.]/g, '');
      if (!/^[0-9a-f]{12}$/.test(mac)) return null;
      return 'sv' + mac;
    }

    function calcularMTA(svMac) {
      if (!/^sv[0-9a-f]{12}$/.test(svMac)) return null;

      let hex = svMac.slice(2);
      let hexArray = hex.split('');

      for (let i = hexArray.length - 1; i >= 0; i--) {
        if (hexArray[i] === 'f') {
          hexArray[i] = '0';
        } else {
          hexArray[i] = (parseInt(hexArray[i], 16) + 1).toString(16);
          break;
        }
      }

      return 'sv' + hexArray.join('');
    }

    function calcularYMostrarMTA() {
      const input = document.getElementById('inputMacMTA').value.trim();
      const svMac = macToSvFormat(input);

      if (!svMac) {
        alert("MAC inválida. Verifica el formato.");
        return;
      }

      const mta = calcularMTA(svMac);
      if (mta) {
        document.getElementById('outputMTA').value = mta;
      } else {
        alert("No se pudo calcular la MTA.");
      }
    }

    function limpiarMTA() {
      document.getElementById('inputMacMTA').value = '';
      document.getElementById('outputMTA').value = '';
    }
  </script>
</body>
</html>
